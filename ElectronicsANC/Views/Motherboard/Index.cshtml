@model IEnumerable<ElectronicsANC.Models.ProductModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Create New Motherboard", "Create")*@
    @using(Html.BeginForm())
    {
        <p>
            Search by Manufacturer:@Html.TextBox("Filter", null, new { @placeholder = "Manufacturer" } )            
            <input type="submit" value="Search" />            
        </p>
        <p>
            Search by Product Name:@Html.TextBox("Name", null, new { @placeholder = "Name" } )            
            <input type="submit" value="Search" />            
        </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Product Name", "Index", new { sortOrder = ViewBag.NameSortParam })           
            @*@Html.DisplayNameFor(model => model.ProductName)*@
        </th>
        <th>
            @Html.ActionLink("Manufacturer", "Index", new { sortOrder = ViewBag.ManufacturerSortParam })
            @*@Html.DisplayNameFor(model => model.Manufacturer)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.PriceSortParam })
            @*@Html.DisplayNameFor(model => model.Price)*@
        </th>
        <th>
            @Html.ActionLink("Warranty", "Index", new { sortOrder = ViewBag.WarrantySortParam })
            @*@Html.DisplayNameFor(model => model.Warranty)*@
        </th>
        <th>
            @Html.ActionLink("Rating", "Index", new { sortOrder = ViewBag.RatingSortParam })
            @*@Html.DisplayNameFor(model => model.Rating)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Warranty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.IdProduct })
            @*@Html.ActionLink("Review", "", new { id = item.IdProduct })*@
        </td>
    </tr>
}

</table>
